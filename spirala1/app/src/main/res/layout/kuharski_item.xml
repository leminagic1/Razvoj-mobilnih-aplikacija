<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="8dp"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="193dp">


        <ImageView
            android:id="@+id/slikaItem"
            android:layout_width="102dp"
            android:layout_height="107dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintEnd_toStartOf="@+id/nazivItem"
            app:layout_constraintHorizontal_bias="0.326"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/cvijet" />

        <TextView
            android:id="@+id/nazivItem"
            android:layout_width="244dp"
            android:layout_height="33dp"
            android:layout_marginTop="40dp"
            android:text="naziv biljke"
            android:textAlignment="center"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/slikaItem"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/profilOkusaItem"
            android:layout_width="244dp"
            android:layout_height="33dp"
            android:layout_marginTop="84dp"
            android:text="profil okusa"
            android:textAlignment="center"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.514"
            app:layout_constraintStart_toEndOf="@+id/slikaItem"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/jelo1Item"
            android:layout_width="73dp"
            android:layout_height="26dp"
            android:layout_marginTop="124dp"
            android:textAlignment="center"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.091"
            app:layout_constraintStart_toEndOf="@+id/slikaItem"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/jelo2Item"
            android:layout_width="73dp"
            android:layout_height="26dp"
            android:layout_marginTop="124dp"
            android:textAlignment="center"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.519"
            app:layout_constraintStart_toEndOf="@+id/slikaItem"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/jelo3Item"
            android:layout_width="73dp"
            android:layout_height="26dp"
            android:layout_marginTop="124dp"
            android:textAlignment="center"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.922"
            app:layout_constraintStart_toEndOf="@+id/slikaItem"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>